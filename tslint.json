{
  "extends": ["tslint-config-standard"],
  "rules": {
    "ter-indent": [true, "tab"],
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "always"],
    "ordered-imports": {
      "severity": "warning"
    },
    "curly": [true, "as-needed"]
  }
}
